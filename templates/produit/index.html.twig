{% extends 'base-breadcrumb.html.twig' %}

{% block titre %}Liste des Produits{% endblock %}


{% block breadcrumb %}
    {% set breadcrumb = {'main': app_name, 'no-link': block('titre')} %}
    {% include "breadcrumb.html.twig" %}
{% endblock %}

{% block class_title_icon %}nc-icon nc-notes{% endblock %}

{% block contenu %}
    <table class="table table-hover table-striped" id="liste-table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Description</th>
                <th data-orderable="false">&nbsp;</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.nom }}</td>
                <td>{{ produit.description }}</td>                
                <td>
                    <a href="{{ path('produit_edit', {'id': produit.id}) }}"><img src="/static/img/edit-icon.png" style="width:25px;"/></a>
                    {{ include('produit/_delete_form.html.twig') }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

{% block add_button %}
                        <button type="submit" class="btn btn-info btn-fill pull-right add-btn" onclick="location.href='{{ path('produit_new') }}'">Ajouter Produit</button>
{% endblock %}
