{% extends 'base-breadcrumb.html.twig' %}

{% block titre %}Liste des paramètres{% endblock %}


{% block breadcrumb %}
    {% set breadcrumb = {'main': app_name, 
        'root': 'Administration',    
    'no-link': block('titre')} %}
    {% include "breadcrumb.html.twig" %}
{% endblock %}
{% block class_title_icon %}nc-icon nc-notes{% endblock %}

{% block contenu %}
    <table class="table table-hover table-striped" id="liste-table">
        <thead>
            <tr>
                        <th>NomParametre</th>
                        <th>Description</th>
                    <th data-orderable="false">&nbsp;</th>
            </tr>
        </thead>
        <tbody>
        {% for parametre in parametres %}
            <tr>
                <td>{{ parametre.nomParametre }}</td>
                <td>{{ parametre.description }}</td>
                <td>
                    <a href="{{ path('parametre_edit', {'id': parametre.id}) }}"><img src="/static/img/edit-icon.png" style="width:25px;"/></a>
                    {{ include('parametre/_delete_form.html.twig') }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

{% block add_button %}
                        <button type="submit" class="btn btn-info btn-fill pull-right add-btn" onclick="location.href='{{ path('parametre_new') }}'">Ajouter un paramètre</button>
{% endblock %}
