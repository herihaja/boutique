<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="/static/img/apple-icon.png">
    <link rel="icon" type="image/png" href="/static/img/favicon.ico">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>{{ app_name }}</title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <link href="/static/css/bootstrap.min.css" rel="stylesheet" />

    <!-- CSS Just for demo purpose, don't include it in your project -->
    <link href="/static/css/demo.css" rel="stylesheet" />
    <link href="/static/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <link href="/static/css/bootstrap.css" rel="stylesheet" />
    
    <!--   Core JS Files   -->
    <script src="/static/js/core/jquery.3.2.1.min.js" type="text/javascript"></script>
    <script src="/static/js/core/popper.min.js" type="text/javascript"></script>
    <script src="/static/js/core/bootstrap.min.js" type="text/javascript"></script>
    <!--  Plugin for Switches, full documentation here: http://www.jque.re/plugins/version3/bootstrap.switch/ -->
    <script src="/static/js/plugins/bootstrap-switch.js"></script>
    <!-- Control Center for Light Bootstrap Dashboard: scripts for the example pages etc -->
    <script src="/static/js/light-bootstrap-dashboard.js?v=2.0.0 " type="text/javascript"></script>
    <!-- Light Bootstrap Dashboard DEMO methods, don't include it in your project! -->


    <script src="/static/js/jquery.dataTables.min.js"></script>
    <script src="/static/js/dataTables.bootstrap4.min.js"></script>
    <style>
                    #signup_form_singleGroup label{
                        width: 30%;
                        margin-left: 4px;
                    }
                </style>
</head>

<body>
    <div class="wrapper">
        <div class="sidebar" data-image="/static/img/sidebar-5.jpg">
            <div class="sidebar-wrapper">
                <div class="logo">
                    <!--
                    <a href="javascript:void(0);" class="simple-text">
                        {{ app_name }}
                    </a>-->
                </div>
            </div>
        </div>
        <div class="main-panel">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg col" color-on-scroll="500" >
                <div class="container-fluid">

                    <button href="" class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-bar burger-lines"></span>
                        <span class="navbar-toggler-bar burger-lines"></span>
                        <span class="navbar-toggler-bar burger-lines"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-end" id="navigation">
                        
                    </div>
                </div>
            </nav>
            <!-- End Navbar -->
            <div class="content ">
                
                 <div class="container-fluid">
                    <div class="row d-flex align-items-center justify-content-center">
                        <div class="col-md-6">
                            <div class="card strpied-tabled-with-hover">
                                <div class="card-header ">
                                    <h4 class="card-title">Bienvenu sur {{ app_name }}</h4>
                                    <p class="card-category">&nbsp;</p>
                                </div>
                                <div class="card-body table-full-width table-responsive" style="margin-left:0;">
                                    <!-- manomboka ny contenu -->
                                    
        <div >

            <div class="col-md-12">
                        {# If there's any error, display it to the user #}
                        {% if message %}
                        <div class="alert alert-success">{{ message | raw}}</div>
                        {% endif %}
                        {{ form_errors(form)}}

                         <form method="post">

                            <div class="row">
                                <div class="col-md-6 pr-1">
                                    <div class="form-group">
                                         <label for="" class=" requiredField">
                                             Prenom
                                         </label>
                                         <div class="">
                                             {{ form_widget(form.personne.prenom) }}
                                             {{ form_widget(form.password) }}
                                             {{ form_errors(form.personne.prenom) }}
                                         </div>
                                    </div>
                                </div>
                                <div class="col-md-6 pl-1">
                                    <div class="form-group">
                                         <label for="" class=" requiredField">
                                             Nom
                                         </label>
                                         <div class="">
                                             {{ form_widget(form.personne.nom) }}
                                             {{ form_errors(form.personne.nom) }}
                                         </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 pr-1">
                                    <div class="form-group">
                                         <label for="" class=" requiredField">
                                             Num&eacute;ro t&eacute;l&eacute;phone
                                         </label>
                                         <div class="">
                                             {{ form_widget(form.personne.tel_1) }}
                                             {{ form_errors(form.personne.tel_1) }}
                                         </div>
                                     </div>
                                </div>
                                <div class="col-md-6 pl-1">
                                    <div class="form-group">
                                         <label for="" class=" requiredField">
                                            Email
                                         </label>
                                         <div class="">
                                             {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                                             {{ form_errors(form.email) }}
                                         </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 pr-1">
                                    <div class="form-group">
                                         <label for="" class=" requiredField">
                                            
                                         </label>
                                         <div class="">
                                             
                                         </div>
                                     </div>
                                </div>
                                <div class="col-md-6 pl-1">
                                    <div class="form-group">
                                         <label for="" class=" requiredField">
                                            Identifiant (Login)
                                         </label>
                                         <div class="">
                                             {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                                             {{ form_errors(form.username) }}
                                         </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row d-none">
                                <div class="col-md-12">
                                    <div class="form-group">
                                         <label>Cin</label>
                                         {{ form_widget(form.personne.cin, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>
                            </div>
                            <div class="row d-none">
                                <div class="col-md-12">
                                    <div class="form-group">
                                         <label>Ville Cin</label>
                                         {{ form_widget(form.personne.ville_cin, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>
                            </div>


                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Adresse</label>
                                        {{ form_widget(form.personne.adresse) }}
                                        {{ form_errors(form.personne.adresse) }}
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row" {% if auth_user.id %} style="display:none;" {% endif %}>
                                <div class="col-md-12">
                                     <div class="form-group">
                                         <label for="" class=" requiredField">
                                             Photo
                                         </label>
                                        {{ form_widget(form.avatar, {'attr': {'class': 'form-control'}}) }}
                                     </div>   
                                </div>
                            </div>
                            
                            
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                         <label></label>
                                         {{ form_widget(form.singleGroup, {'attr': {'class': 'form-control'}}) }}
                                         {{ form_widget(form._token) }}
                                    </div>
                                </div>
                            </div>
                         
                         
                         <div class="row">
                              <div class="col-md-12">
                                        <button type="submit" class="btn btn-info btn-fill pull-right">S'inscrire</button>
                                        <a href="{{ url("app_login") }}" class="ml-4">S'identifier</a>
                              </div>
                         </div>
                         <div class="clearfix"></div>
                     </form>
                 </div>

            </div>

                                    <!-- fin contenu -->
                                </div>
                            </div>

                        </div>

                    </div>
                </div>

            </div>
            <footer class="footer">
                <div class="container-fluid">
                    <nav>
                        
                        <p class="copyright text-center">
                            ©
                            <script>
                                document.write(new Date().getFullYear())
                            </script>
                            <a href="mailto:hery.imiary@gmail.com">Herihaja</a>
                        </p>
                    </nav>
                </div>
            </footer>
        </div>
    </div>
</body>
</html>
