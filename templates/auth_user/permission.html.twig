{% block block_css %}
    <link href="/static/css/multi-select.css" media="screen" rel="stylesheet" type="text/css">
{% endblock %}


{% block tabContent %}
    <form action="" method="post" enctype="multipart/form-data">
        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                     <label for="" class=" requiredField">
                                                         Groupes
                                                     </label>
                                                     <div class="">
                                                         {{ form_widget(form.groups, {'attr': {'class': 'form-control select-multiple-searchable'}}) }}
